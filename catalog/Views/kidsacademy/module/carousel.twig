<section class="banner banner-two">
    <div class="banner-slider swiper-container">
		{% if autoplay %}
			<div id="carousel{{ banner_id }}" class="carousel slide shadow-sm mb-5 bg-white rounded" data-ride="carousel">
			{% else %}
				<div id="carousel{{ banner_id }}" class="carousel slide shadow-sm mb-5 bg-white rounded">
				{% endif %}
				{% if indicators %}
					<ol class="carousel-indicators">
						{% for banner in banners %}
							{% if loop.first %}
								<li data-target="#carousel{{ banner_id }}" data-slide-to="{{ loop.index0 }}" class="active"></li>
							{% else %}
								<li data-target="#carousel{{ banner_id }}" data-slide-to="{{ loop.index0 }}"></li>
							{% endif %}
						{% endfor %}
					</ol>
				{% endif %}
				<div class="carousel-inner">
					{% for banner in banners %}
						{% if loop.first %}
							<div class="carousel-item active">
								<img src="{{ banner.image }}" class="d-block w-100" alt="...">
								{% if banner.caption %}
									<div class="carousel-caption d-none d-md-block">
										<h5>{{ banner.title }}</h5>
										<p>{{ banner.caption }}</p>
									</div>
								{% endif %}
							</div>
						{% else %}
							<div class="carousel-item">
								<img src="{{ banner.image }}" class="d-block w-100" alt="...">
								{% if banner.caption %}
									<div class="carousel-caption d-none d-md-block">
										<h5>{{ banner.title }}</h5>
										<p>{{ banner.caption }}</p>
									</div>
								{% endif %}

							</div>
						{% endif %}
					{% endfor %}
				</div>
				{% if arrows %}
					<a class="carousel-control-prev" href="#carousel{{ banner_id }}" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carousel{{ banner_id }}" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				{% endif %}
			</div>
		</div>
	</section>


