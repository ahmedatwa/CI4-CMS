<fieldset>
	<legend>{{ heading_title }}</legend>
	{% if success %}
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<i class="fas fa-check-circle"></i>
			{{ success }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endif %}
	{% if error_warning %}
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<i class="fas fa-exclamation-circle"></i>
			{{ error_warning }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endif %}
	<div class="table-responsive">
		<table class="table table-bordered table-striped" id="table-location">
			<thead>
				<tr>
					<td>{{ column_name }}</td>
					<td>{{ column_width }}</td>
					<td>{{ column_status }}</td>
					<td>{{ column_sort_order }}</td>
					<td>{{ column_action }}</td>
				</tr>
			</thead>
			<tbody>
				{% if extensions %}
					{% for extension in extensions %}
						<tr>
							<td class="text-left">{{ extension.name }}</td>
							<td class="text-right">{{ extension.width }}</td>
							<td class="text-left">{{ extension.status }}</td>
							<td class="text-right">{{ extension.sort_order }}</td>
							<td class="text-right">
								{% if extension.installed %}
									<a href="{{ extension.edit }}" data-toggle-tooltip="tooltip" title="{{ button_edit }}" class="btn btn-primary btn-sm">
										<i class="fas fa-edit"></i>
									</a>
								{% else %}
									<button type="button" class="btn btn-primary btn-sm" disabled="disabled">
										<i class="fas fa-edit"></i>
									</button>
								{% endif %}
								{% if not extension.installed %}
									<a href="{{ extension.install }}" data-toggle-tooltip="tooltip" title="{{ button_install }}" class="btn btn-success btn-sm">
										<i class="fas fa-plus-circle"></i>
									</a>
								{% else %}
									<a href="{{ extension.uninstall }}" data-toggle-tooltip="tooltip" title="{{ button_uninstall }}" class="btn btn-danger btn-sm">
										<i class="fas fa-minus-circle"></i>
									</a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
	</div>
