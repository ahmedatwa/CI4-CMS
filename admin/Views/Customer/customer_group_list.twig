{{ header }}
{{ column_left }}
	<main id="content">
		<div class="container-fluid px-4">
			<div class="page-header">
				<div class="container-fluid">
					<div class="float-right">
						<a href="{{ add }}" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_add }}" class="btn btn-primary">
							<i class="fas fa-plus"></i>
						</a>
						<a href="{{ delete }}" role="button" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_delete }}" class="btn btn-danger" name="button-delete" form="form-customer-group">
							<i class="far fa-trash-alt"></i>
						</a>
					</div>
					<h1>{{ heading_title }}</h1>
					<ul class="breadcrumb">
						{% for breadcrumb in breadcrumbs %}
							<li class="breadcrumb-item">
								<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
			{# </ page header #}
			<div class="card mb-4">
				<div class="card-header">
					<i class="fas fa-th-list"></i>
					{{ text_list }}
				</div>
				<div class="card-body">
					<form id="form-customer-group" accept-charset="utf-8" encrypt="multipart/form-data">
						<input type="hidden" name="{{ csrf_token() }}" value="{{ csrf_hash() }}"/>
						<div class="table-responsive">
							<table id="table-list" class="table table-bordered table-striped" data-order='[[ 1, "asc" ]]'>
								<thead class="">
									<tr>
										<th width="1%" class="no-sort">
											<input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" id="selectAll"/>
										</th>
										<th width="60%">{{ column_name }}</th>
										<th>{{ column_date_added }}</th>
										<th class="text-center no-sort">{{ column_action }}</th>
									</tr>
								</thead>
								<tbody>
									{% for customerGroup in customer_groups %}
										<tr>
											<th scope="row">
												{% if customerGroup.customer_group_id in selected %}
													<input type="checkbox" name="selected[]" value="{{ customerGroup.customer_group_id }}" checked="checked"/>
												{% else %}
													<input type="checkbox" name="selected[]" value="{{ customerGroup.customer_group_id }}"/>
												{% endif %}
											</th>
											<td>{{ customerGroup.name }}</td>
											<td>{{ customerGroup.date_added }}</td>
											<td class="text-center">
												<a href="{{ customerGroup.edit }}" role="button" class="btn btn-primary btn-sm" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_edit }}">
													<i class="far fa-edit"></i>
												</a>
											</td>
										</tr>
									</div>
								</tbody>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</form>
</div></div></div></main>{{ footer }}
