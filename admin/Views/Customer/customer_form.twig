{{ header }}
{{ column_left }}
<main id="content">
	<div class="container-fluid px-4">
		<div class="page-header">
			<div class="container-fluid">
				<div class="float-right">
					<a href="{{ action }}" role="button" data-toggle-tooltip="tooltip" name="button-save" data-placement="top" title="{{ button_save }}" class="btn btn-primary" form="form-customer">
						<i class="fa fa-save"></i>
					</a>
					<a href="{{ back }}" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_cancel }}" class="btn btn-light border">
						<i class="fa fa-reply"></i>
					</a>
				</div>
				<h1>{{ heading_title }}</h1>
				<ul class="breadcrumb">
					{% for breadcrumb in breadcrumbs %}
						<li class="breadcrumb-item">
							<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="card mb-4">
			<div class="card-header">
				<i class="fas fa-pen"></i>
				{{ text_form }}
			</div>
			<div class="card-body">
				<form id="form-customer" accept-charset="utf-8" encrypt="multipart/form-data">
					<input type="hidden" name="{{ csrf_token() }}" value="{{ csrf_hash() }}"/>
					<div class="form-group row">
						<label for="input_firstname" class="col-sm-2 col-form-label required">{{ entry_firstname }}</label>
						<div class="col-sm-10">
							<input type="text" name="firstname" class="form-control" id="input-firstname" value="{{ firstname }}">
						</div>
					</div>
					<div class="form-group row">
						<label for="input_lastname" class="col-sm-2 col-form-label required">{{ entry_lastname }}</label>
						<div class="col-sm-10">
							<input type="text" name="lastname" class="form-control" id="input-lastname" value="{{ lastname }}">
						</div>
					</div>
					<div class="form-group row">
						<label for="input_email" class="col-sm-2 col-form-label required">{{ entry_email }}</label>
						<div class="col-sm-10">
							<input type="text" name="email" class="form-control" id="input-email" value="{{ email }}">
						</div>
					</div>
					<fieldset>
						<legend class="border-bottom mb-3">{{ entry_password }}</legend>
						<div class="form-group row">
							<label for="input_password" class="col-sm-2 col-form-label required">{{ entry_password }}</label>
							<div class="col-sm-10">
								<input type="password" name="password" value="{{ password }}" class="form-control" id="input-password">
							</div>
						</div>
						<div class="form-group row">
							<label for="input_confirm" class="col-sm-2 col-form-label required">{{ entry_confirm }}</label>
							<div class="col-sm-10">
								<input type="password" name="confirm" value="{{ password }}" class="form-control" id="input-confirm">
							</div>
						</div>
					</fieldset>
					<fieldset>
						<legend class="border-bottom mb-3">{{ text_other }}</legend>
						<div class="form-group row">
							<label for="input_status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
							<div class="col-sm-10">
								<select class="form-control" name="status" aria-label="select_status">
									{% if status %}
										<option value="1" selected>{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
									{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected>{{ text_disabled }}</option>
									{% endif %}
								</select>
							</div>
						</div>
						<div class="form-group row">
							<label for="input_customer_group" class="col-sm-2 col-form-label">{{ entry_customer_group }}</label>
							<div class="col-sm-10">
								<select class="form-control" name="customer_group_id" aria-label="select_customer_group">
									{% for customer_group in customer_groups %}
										{% if customer_group.customer_group_id == customer_group_id %}
											<option value="{{ customer_group.customer_group_id }}" selected>
												{{ customer_group.name }}
											</option>
										{% else %}
											<option value="{{ customer_group.customer_group_id }}">{{ customer_group.name }}
											</option>
										{% endif %}
									{% endfor %}
								</select>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 control-label" for="input-newsletter">{{ entry_newsletter }}
							</label>
							<div class="col-sm-10">
								{% if newsletter  == 1 %}
									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="config_customer_activity" value="1" checked>
										<label class="form-check-label" for="inlineRadio1">{{ text_yes }}</label>
									</div>
									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="config_customer_activity" value="0">
										<label class="form-check-label" for="inlineRadio1">{{ text_no }}</label>
									</div>
								{% else %}
									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="config_customer_activity" value="1">
										<label class="form-check-label" for="inlineRadio1">{{ text_yes }}</label>
									</div>
									<div class="form-check form-check-inline">
										<input class="form-check-input" type="radio" name="config_customer_activity" value="0" checked>
										<label class="form-check-label" for="inlineRadio1">{{ text_no }}</label>
									</div>
								{% endif %}
							</div>
						</div>
					</fieldset>
				</form>
			</div>
			<!-- Card Body -->
		</div>
	</div>
</main>
{{ footer }}
