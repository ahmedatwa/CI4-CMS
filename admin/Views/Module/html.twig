{{ header }}
{{ column_left }}
<main id="content">
	<div class="container-fluid px-4">
		<div class="page-header">
			<div class="container-fluid">
				<div class="float-right">
					<a role="button" href="{{ action }}" data-toggle-tooltip="tooltip" name="button-save" data-placement="top" title="{{ button_save }}" class="btn btn-primary" form="form-module">
						<i class="fa fa-save"></i>
					</a>
					<a href="{{ back }}" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_cancel }}" class="btn btn-light border">
						<i class="fa fa-reply"></i>
					</a>
				</div>
				<h1>{{ heading_title }}</h1>
				<ul class="breadcrumb">
					{% for breadcrumb in breadcrumbs %}
						<li class="breadcrumb-item">
							<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="card mb-4">
			<div class="card-header">
				<i class="fas fa-pen"></i>
				{{ text_edit }}
			</div>
			<div class="card-body">
				<form enctype="multipart/form-data" id="form-module" class="form-horizontal">
					<input type="hidden" name="{{ csrf_token() }}" value="{{ csrf_hash() }}"/>
					<div class="form-group row">
						<label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
						<div class="col-sm-10">
							<input class="form-control" name="name" value="{{ name }}">
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label" for="input-title">{{ entry_title }}</label>
						<div class="col-sm-10">
							<input class="form-control" name="module_description[title]" value="{{ module_description.title }}">
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label" for="input-module_description">{{ entry_description }}</label>
						<div class="col-sm-10">
							<textarea data-ci-toggle="summernote" class="form-control" name="module_description[description]" data-toggle="summernote">{{ module_description.description }}</textarea>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<select name="status" id="input-status" class="form-control">
								{% if status %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
				</form>
			</div>
			<!-- Card Body -->
		</div>
	</div>
</main>
<script src="vendor/summernote/summernote-bs4.js"></script>
<script src="javascript/summernote.js"></script>
<link href="vendor/summernote/summernote-bs4.css" rel="stylesheet">
{{ footer }}
