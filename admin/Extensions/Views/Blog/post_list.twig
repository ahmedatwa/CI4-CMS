{{ header }}
{{ column_left }}
<main id="content">
	<div class="container-fluid px-4">
		<div class="page-header">
			<div class="container-fluid">
				<div class="float-right">
					<a href="{{ add }}" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_add }}" class="btn btn-primary">
						<i class="fas fa-plus"></i>
					</a>
					<a href="{{ delete }}" role="button" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_delete }}" class="btn btn-danger disabled" name="button-delete" form="form-blog-post">
						<i class="far fa-trash-alt"></i>
					</a>
					<a href="{{ back }}" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_cancel }}" class="btn btn-light border">
						<i class="fa fa-reply"></i>
					</a>
				</div>
				<h1>{{ heading_title }}</h1>
				<ul class="breadcrumb">
					{% for breadcrumb in breadcrumbs %}
						<li class="breadcrumb-item">
							<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		{# </ page header #}
		<div class="card mb-4">
			<div class="card-header">
				<i class="fas fa-pen"></i>
				{{ text_edit }}
			</div>
			<div class="card-body">
      			<form enctype="multipart/form-data" id="form-blog-post" accept-charset="utf-8"> 
					<input type="hidden" name="{{ csrf_token() }}" value="{{ csrf_hash() }}"/>
					<table id="table-list" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th width="1%" class="no-sort"><input id="selectAll" type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);"/></th>
								<th width="60%">{{ column_title }}</th>
								<th>{{ column_status }}</th>
								<th>{{ column_date_added }}</th>
								<th>{{ column_action }}</th>
							</tr>
						</thead>
						<tbody>
							{% if posts %}
								{% for post in posts %}
									<tr>
										<th scope="row">
											{% if selected in post.post_id %}
												<input type="checkbox" name="selected[]" value="{{ post.post_id }}" checked="checked"/>
											{% else %}
												<input type="checkbox" name="selected[]" value="{{ post.post_id }}"/>
											{% endif %}
										</th>
									</tr>
								</div>
							</th>
							<td>{{ post.title }}</td>
							<td>{{ post.status }}</td>
							<td>{{ post.date_added }}</td>
							<td class="text-center">
								<a href="{{ post.edit }}" class="btn btn-primary btn-sm" data-toggle-tooltip="tooltip" data-placement="top" title="{{ button_edit }}">
									<i class="far fa-edit"></i>
								</a>
							</td>
						</tbody>
					</tr>
				{% endfor %}
			{% endif %}
		</tbody>
	</table>
</form></div></div></div></main>{{ footer }}
